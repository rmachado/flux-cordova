{
  "name": "flux-cordova",
  "version": "0.0.1",
  "description": "Flux-Cordova experiment",
  "repository": "https://github.com/rmachado/flux-cordova.git",
  "author": "Rodrigo Machado",
  "main": "www/js/app.js",
  "dependencies": {
    "flux": "^2.0.1",
    "object-assign": "^1.0.0",
    "react": "^0.12.0",
    "keymirror": "^0.1.1"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "watchify -o www/js/bundle.js -v -d www/js/app.js",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > www/js/bundle.min.js",
    "test": "jest"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
